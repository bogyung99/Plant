<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relatively"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EADACD"
    android:orientation="vertical"
    android:weightSum="1" >
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.30"
        android:orientation="vertical"
        android:weightSum="1" >

        <TextView
            android:id="@+id/textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="bottom|center_horizontal"
            android:fontFamily="@font/font1"
            android:text="오늘의 문제 끝!"
            android:textColor="#2E2E2E"
            android:textSize="35.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textGetCoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="코인 7개 획득"
            android:fontFamily="@font/font1"
            android:textColor="#444455"
            android:textSize="25.0sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.35"
        android:orientation="vertical"
        android:weightSum="1" >
        <TextView
            android:id="@+id/textRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/font1"
            android:layout_weight="0.6"
            android:text="맞은 개수 : 7개"
            android:textColor="#444455"
            android:textSize="40.0sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textWrong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_weight="0.4"
            android:gravity="center_vertical"
            android:fontFamily="@font/font1"
            android:text="틀린 개수 : 3개"
            android:textColor="#444455"
            android:textSize="40.0sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.40"
        android:orientation="horizontal"
        android:weightSum="1" >
        <Button
            android:id="@+id/buttonReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.5"
            android:layout_centerHorizontal="true"
            android:onClick="review"
            android:text="오답노트"
            android:textColor="#444455"
            android:textStyle="bold"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.5"
            android:layout_marginRight="40dp"
            android:background="#ffffff"
            android:onClick="main"
            android:text="메인화면"
            android:textColor="#444455"
            android:textStyle="bold"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>