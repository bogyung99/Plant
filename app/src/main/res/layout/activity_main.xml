<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relatively"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EADACD"
    android:orientation="vertical"
    android:weightSum="1" >
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.35"
        android:orientation="vertical"
        android:weightSum="1" >
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.45"
            android:orientation="vertical"
            android:weightSum="1" >
            <TextView
                android:id="@+id/main1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:gravity="bottom"
                android:layout_weight="0.4"
                android:text="하루하루"
                android:textColor="#444455"
                android:fontFamily="@font/font1"
                android:textSize="40.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/main2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_weight="0.6"
                android:fontFamily="@font/font1"
                android:text="맞춤법"
                android:textColor="#444455"
                android:textSize="70.0sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.27"
        android:orientation="vertical"
        android:weightSum="1" >
        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="horizontal"
            android:weightSum="1" >

            <LinearLayout
                android:id="@+id/linearLayout10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/day"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/font1"
                    android:text="Day 1"
                    android:textColor="#444455"
                    android:textSize="30.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/level"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="0.5"
                    android:text="Level 1"
                    android:textColor="#444455"
                    android:fontFamily="@font/font1"
                    android:textSize="25.0sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:orientation="horizontal"
                android:weightSum="100" >
                <Button
                    android:id="@+id/upgrade"
                    android:layout_width="23pt"
                    android:layout_height="18pt"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="30dp"
                    android:background="#ffffff"
                    android:text="UP"
                    android:layout_gravity="center"
                    android:onClick="levelUp"
                    android:textColor="#444455"
                    android:textSize="24sp"
                    android:fontFamily="@font/font1"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/coinImage"
                    android:layout_width="85dp"
                    android:layout_height="72dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:src="@drawable/coin" />

                <TextView
                    android:id="@+id/coin"
                    android:layout_width="45dp"
                    android:layout_height="74dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="7"
                    android:fontFamily="@font/font1"
                    android:textColor="#444455"
                    android:textSize="35.0sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:weightSum="1" >

            <ImageView
                android:id="@+id/plant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.5"
                android:scaleType="center"
                android:gravity="right"
                android:src="@drawable/plant" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.35"
        android:orientation="vertical"
        android:weightSum="1" >
        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.6"
            android:weightSum="1" >
            <Button
                android:id="@+id/buttonQuest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_weight="0.5"
                android:layout_centerHorizontal="true"
                android:onClick="review"
                android:text="오늘의 문제"
                android:textColor="#444455"
                android:textStyle="bold"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.5"
            android:weightSum="1" >
            <Button
                android:id="@+id/buttonRev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:layout_centerHorizontal="true"
                android:onClick="review"
                android:text="오답노트"
                android:textColor="#444455"
                android:textStyle="bold"
                android:textSize="20sp" />
            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp"
                android:layout_weight="0.5"
                android:layout_centerHorizontal="true"
                android:onClick="review"
                android:text="로그아웃"
                android:textColor="#444455"
                android:textStyle="bold"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>